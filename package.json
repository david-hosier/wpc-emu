{
  "name": "wpc-emu",
  "version": "1.0.0",
  "description": "WPC pinball machine emu",
  "main": "index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "build:production": "webpack --mode production",
    "build:test": "rm -f dist/* && webpack && cp assets/* dist && DEBUG=* node index.js",
    "start": "DEBUG=* node index.js",
    "debug": "node --inspect index.js",
    "xo": "xo",
    "test": "ava --verbose test/lib/**",
    "test:integration": "ava --verbose test/integration/**",
    "test:debug": "DEBUG='wpc*' ava --verbose test/lib/**"
  },
  "author": "Michael Vogt",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-minify-webpack-plugin": "^0.3.1",
    "remove-debug-loader": "^0.2.6",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "xo": "^0.21.0"
  },
  "dependencies": {
    "debug": "^3.1.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "space": true,
    "rules": {
      "comma-dangle": 0,
      "arrow-parens": 0,
      "no-var": 0,
      "comma-spacing": 0,
      "capitalized-comments": 0,
      "promise/prefer-await-to-then": 0,
      "ava/prefer-async-await": 0,
      "no-use-before-define": 0,
      "spaced-comment": 0,
      "object-curly-spacing": 0,
      "array-bracket-spacing": 0,
      "padded-blocks": 0,
      "no-mixed-operators": 0,
      "unicorn/import-index": 0,
      "new-cap": 0,
      "prefer-destructuring": 0,
      "no-use-extend-native/no-use-extend-native": 0
    },
    "ignores": [
      "client",
      "lib/boards/up/ym2151.js",
      "lib/boards/up/cpu6809.js"
    ]
  }
}
